    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2023",
        "checkJs": true,
        "skipLibCheck": true,
        "noEmit": true
    }
}
