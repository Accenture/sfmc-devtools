{
    "tabWidth": 4,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "package.json",
            "options": {
                "printWidth": 40
            }
        },
        {
            "files": "*.ssjs",
            "options": {
                "parser": "babel",
                "trailingComma": "none"
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
